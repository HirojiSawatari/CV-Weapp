/* 界面元素样式 */
.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  min-height: 100%;
  font-size: 32rpx;
}
.header {
  padding: 40rpx 80rpx 20rpx;
}
.slide swiper {
  height: 400rpx;
  width: 100%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.title {
  display: block;
  font-size: 50rpx;
}
.description {
  display: block; 
  margin-top: 30rpx;
  color: #888;
  font-size: 28rpx;
}

/* 弹性盒 */
.items {
  display: flex;
  flex-direction: column;
  padding: 30rpx
}
.item {
  display: flex;
  flex: 1;
  border: 1rpx solid #eee;
  margin-top: 20rpx;
  padding: 30rpx;
  background-color: #FBF9FE;
}

.item-text {
  flex: 1;
}

.item-image {
  width: 40rpx;
  height: 40rpx;
}