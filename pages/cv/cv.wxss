}

.sch {
  display: block; 
  font-weight: bold;
  font-size: 35rpx;
  margin-left: 50rpx;
}

.bac {
  display: block; 
  font-size: 27rpx;
  margin-top: 15rpx;
  margin-left: 50rpx;
}

.sub {
